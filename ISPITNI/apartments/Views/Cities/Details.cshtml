@model WebApplication1.Models.Entities.City

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>City</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

    </dl>
</div>


<div>
    <h4>Associated Apartmans</h4>
    <hr />
    <table class="table">
        <tr>
            <th>Apartman Name</th>
            <th>Apartman Adress</th>
            <th>PricePerDay</th>
            <th>Actions</th>
        </tr>
        @foreach (var apartman in Model.Apartments)
        {
            if (apartman.City != null)
            {
                <tr>
                    <td>@apartman.Name</td>
                    <td>@apartman.Address</td>
                    <td>@apartman.PricePerDay</td>

                    <td>
                        @Html.ActionLink("Remove", "RemoveApartman", new { cityID = Model.ID, apartmanID = apartman.ID })
                    </td>
                </tr>
            }
            else
            {
    <div>
        <span>NO APARTMANs STILL FOR @Model.Name</span>
    </div>
             
            }
        }
    </table>
</div>




@Html.ActionLink("ADD A NEW APARTMAN", "AddApartmanToCity", new { cityId = Model.ID })

<p>
