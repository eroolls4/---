@model WebApplication1.Models.AddUserToRoleViewModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>AddUserToRole</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.SelectedEmail)
        @Html.DropDownListFor(z => z.SelectedEmail, new SelectList(Model.AllEmails), new { @class = "form-control " })

    </div>

    <div class="form-group">
        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.AllRoles), new { @class = "form-control " })

    </div>

    <button type="submit">
        SAVE
    </button>

}
