@model HospitalSystem.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>AddUser with email to role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(z => z.SelectedEmail)
        @Html.DropDownListFor(z => z.SelectedEmail, new SelectList(Model.PossibleEmails), new { @class = "form-control " })

    </div>

    <div class="form-group">
        @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.PossibleRoles), new { @class = "form-control " })

    </div>

    <button type="submit">
        SAVE
    </button>

}

