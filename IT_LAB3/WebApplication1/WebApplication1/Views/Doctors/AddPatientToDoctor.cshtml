@model WebApplication1.Models.DTOs.AddPatientToDoctorDTO

@{
    ViewBag.Title = "AddPatientToDoctor";
}

<h2>Adding a patient to doctor @Model.doctor.DoctorName</h2>

<h3>Please select a patient to add</h3>

<form method="post" asp-controller="Doctors" asp-action="AddPatientToDoctor">
    @Html.Hidden("doctorId", Model.doctor.ID)

    <div class="form-group">
        <label for="patientId" class="control-label col-md-2">Patient</label>
        <div class="col-md-5">
            <select id="patientId" name="patientId" class="form-control">
                @foreach (var patient in Model.patients)
                {
                    <option value="@patient.ID">@patient.PatientName</option>
                }
            </select>
        </div>
    </div>



    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger m-2">
            @ViewBag.ErrorMessage
        </div>
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Patient" class="btn btn-primary" />
        </div>
    </div>
</form>
